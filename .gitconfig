[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = red reverse
	local = blue
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	editor = vim
	pager = cat

[merge]
	tool = vimdiff

[alias]
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ci = commit -a
	co = checkout
	st = status
	br = branch
	lb = branch -a
	brco = checkout -b
	dc = diff --cached
	unci = reset --soft HEAD^
	rf = reflog --date=local
	dlbr = remote prune origin
	tlbr = remote prune origin --dry-run
	la = !git config -l | grep alias | cut -c 7-
	lfc = diff-tree --no-commit-id --name-only -r
	ph = !: git branch && git push --follow-tags origin
	po = !: git branch && git pull --tags origin
	dn = diff --name-only
	k = !gitk $@ &
	mt = mergetool --prompt
	tgl = tag --sort=v:refname -n

	# testing:
	gitkconflict = !gitk --left-right HEAD...MERGE_HEAD

[include]
	path = ~/.gitconfig.d # set user name and email here
