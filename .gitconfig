[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = red reverse
	local = blue
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	editor = vim

[merge]
	tool = vimdiff

[alias]
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	gr = grep -iI --line-number
	ci = commit -a
	co = checkout
	st = status
	br = branch
	lb = branch -a
	unci = reset --soft HEAD^
	pom = pull origin master
	dom = diff origin/master
	rf = reflog --date=local
	dlbr = remote prune origin
	tlbr = remote prune origin --dry-run
	la=!git config -l | grep alias | cut -c 7-
	brco = checkout -b
	dc = diff --cached
	lfc = diff-tree --no-commit-id --name-only -r
	unt = rm --cached
	ph = !git push origin $1
	po = !git pull origin $1

[include]
	path = ~/.gitconfig.d # set user name and email here
